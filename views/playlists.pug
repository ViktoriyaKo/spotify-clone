// aside
aside.aside-block.d-flex.flex-column
  a.logo(href='#') Spotify
  nav
    a#home.nav-link.mx-2.p-2.color-active.rounded-1(href='#home')
      svg.logo-main(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
