extends base.pug
block content
  main
    nav.library-nav.d-flex.gap-4
      a#playlists.p-2.rounded(href='./playlists') Playlists
      a#artists.p-2.rounded(href='./artists') Artists
      a#albums.text-light.color-active.p-2.rounded(href='./albums') Albums
    div
      .row
        h3.col-12.py-4 Albums
      .row
        each album in albums.items
          .col-xxl-2.col-xl-3.col-md-4.col-sm-6.mb-4
            a.main-card.p-3.rounded-2(href=`/album/${album.album.id}`)
              .wrapper-img
                img(src=`${album.album.images[0].url}` alt='album cover')
                button.btn-play
                  svg.svg-play(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z')
              h4.mt-2= album.album.name
              small.text-muted= album.album.artists[0].name