doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Home
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/home.css')
// aside здесь не подключен! подключение в папке home
include ./_aside
.blocks-main
  // header
  include ./_header
  // main favorites!!!
  main.main-favorites
    .p-4
      .d-flex.align-items-center.mb-3
        .block-like-svg
          svg(xmlns='http://www.w3.org/2000/svg' fill='white' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
            path(stroke-linecap='round' stroke-linejoin='round' d='M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z')
        .d-flex.flex-column.text-white
          small.text-uppercase playlist
          h1.text-main Liked Tracks
          small.text-uppercase
            | Client - 
            span.amount-liked-track 1
            |  track
    .wrapper-table.py-3
      button.btn-play-like
        svg.svg-play(xmlns='http://www.w3.org/2000/svg' fill='black' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
          path(stroke-linecap='round' stroke-linejoin='round' d='M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z')
      table.table.table-like-playlist
        thead
          tr
            th.col-1.text-center #
            th.col-4 Name
            th.col-4 Album
            th.col-1
              svg.logo-main(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                path(stroke-linecap='round' stroke-linejoin='round' d='M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z')
        tbody.align-middle
          tr
            th.col-1.text-center 1
            td.col-4
              .d-flex.gap-3
                img.icon-album(src='' alt='album')
                .d-flex.flex-column
                  small.text-uppercase.d-block.singer-liked-track Track
                  small.text-uppercase.d-block.name-liked-track Name Track
            td.col-4
              .d-flex.justify-content-between
                span Album
                .heart-svg-table
                  svg(xmlns='http://www.w3.org/2000/svg' fill='green' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z')
            td.col-1 3:11
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')